                // إذا لم يتم عرض الشاشة مسبقاً في هذه الجلسة
                if (!sessionStorage.getItem('splashShown')) {
                    setTimeout(() => {
                        loader.style.opacity = '0';
                        setTimeout(() => {
                            loader.style.display = 'none';
                        }, 800);
                        // حفظ الحالة لعدم تكرار العرض عند التنقل بين الصفحات
                        sessionStorage.setItem('splashShown', 'true');
                    }, 1800); // مدة عرض الشعار (ثانية وثمانية أجزاء)
                } else {
